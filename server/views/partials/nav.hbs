{{#unless loggedin}}
<div class="modal fade" id="loginModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    	<form data-toggle="validator" role="form" id="login-form">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Login to your account</h4>
	      </div>
	      <div class="modal-body">
	      	<div class="form-group">
				    <input type="text" class="form-control" id="loginUsername" placeholder="Username" required>
				  </div>
	        <div class="input-group">
			      <input type="password" class="form-control" id="loginPassword" placeholder="Password" required>
			      <span class="input-group-btn">
			        <button class="btn btn-default" type="button">Forgot?</button>
			      </span>
			    </div><!-- /input-group -->
			  </div>
	      <div class="modal-footer">
	        <button type="submit" class="btn btn-primary">Login</button>
	      </div>
	    </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="registerModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    	<form data-toggle="validator" role="form" id="register-form">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Register your account</h4>
	      </div>
	      <div class="modal-body">
	      	<div class="form-group">
				    <input type="text" class="form-control" id="regUsername" placeholder="Username" required>
				  </div>
				  <div class="form-group">
				    <input type="email" class="form-control" id="inputEmail" placeholder="Email" data-error="Please enter a valid email address" required>
				    <div class="help-block with-errors"></div>
				  </div>
				  <div class="form-group">
				    <div class="form-group col-lg">
				      <input type="password" data-minlength="6" class="form-control" id="regPassword" placeholder="Password (6 char minimum)" required>
				    </div>
				    <div class="form-group col-lg">
				      <input type="password" class="form-control" data-match="#regPassword" data-match-error="Password don't match" placeholder="Confirm Password" required>
				      <div class="help-block with-errors"></div>
				    </div>
				  </div>
			  </div>
	      <div class="modal-footer">
	        <button type="submit" class="btn btn-primary" data-loading-text="Loading..." >Register</button>
	      </div>
	    </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{{/unless}}